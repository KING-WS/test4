<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sm.app.repository.ReportRepository">
    <select id="selectAll" resultType="Report">
        SELECT r.*, p.product_name FROM report r
        LEFT JOIN product p ON r.product_id = p.product_id
    </select>

    <select id="selectCount" resultType="int">
        SELECT COUNT(*) FROM report
    </select>

    <select id="selectMostReportedUser" resultType="String">
        SELECT reported_id
        FROM report
        GROUP BY reported_id
        ORDER BY COUNT(reported_id) DESC
        LIMIT 1
    </select>
</mapper>
